	cd ..\printer
	$(make)
	cd ..\driver
	$(make)
	cd ..\ramdrive
	$(make)
	cd ..\smartdrv
	$(make)
	cd ..\xma2ems
	$(make)
	cd ..\vdisk
	$(make)
	cd ..\xmaem
	$(make)
	cd ..

